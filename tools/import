#!/bin/sh

set -e || exit 1

for i in "$@" ; do
	[ -n "$i" ] || continue
	[ ! -e "packages/$i" ] || { echo "packages/$i already exists!" >&2 ; exit 1 ; }
	apt-get source "$i"
	mkdir "packages/$i"
	mv "$i-*/debian" "packages/$i"
	rm -rf "$i*"
	git add "packages/$i"
	cd "packages/$i"
	../../tools/gnomeup
	uscan --verbose
done
