#!/usr/bin/env bash

set -e

usage () { echo "usage: `basename $0 xmlfiles`" ; return 0; }
usageerr () { usage >&2 ; return 1 ; }

[ $# -gt 0 ] || usageerr

XSLT=tools/swip.xslt

genxml () {
	echo "<?xml version=\"1.0\"?><swip/>" | xmlstarlet ed -s /swip -t elem -n name -v "$i"
}

for i in "$@" ; do
	genxml "$i" | tee "$i".xml
done
