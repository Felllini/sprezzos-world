#!/bin/sh

if [ -e debian/control.in ] ; then
	F=debian/control.in
elif [ -e debian/control ] ; then
	F=debian/control
else
	echo "no debian/control or debian/control.in" >&2
	exit 1
fi

sed -i $F -e 's/^Maintainer:/Maintainer: Nick Black <nick.black@sprezzatech.com>\nXSBC-Original-Maintainer:/'
sed -i $F -e 's/^Standards-Version:.*$/Standards-Version: 3.9.4/'
sed -i $F -e 's/libgnomedesktop-3/libgnomedesktop/'
sed -i $F -e 's/^libpng12/libpng15/'

sed -i $F -e '/^Uploaders:/d'
sed -i $F -e '/^DM-Upload-Allowed:/d'

fakeroot debian/rules clean
