#!/bin/sh

set -e

for i in "$@" ; do
	cat <<EOF
.PHONY: $i
$i:\$(`echo $i | tr [:lower:] [:upper:] | tr -d -- -`)_\$(ARCH).deb
\$(`echo $i | tr [:lower:] [:upper:] | tr -d -- -`): \$(SPREZZ)/$i/debian/changelog
	mkdir \$@
	cp -r \$(<D) \$@
	cd \$@ && uscan --force-download --download-current-version
	tar xzvf $i-\$(${i}_UPVER).tar.gz \$(TARARGS) \$@
EOF
done
