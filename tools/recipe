#!/bin/sh

set -e

for i in "$@" ; do
	echo ".PHONY: $i"
	echo "$i:\$(`echo $i | tr [:lower:] [:upper:] | tr -d -`)_\$(ARCH).deb"
	echo "\$(`echo $i | tr [:lower:] [:upper:] | tr -d -`): \$(SPREZZ)/$i/debian/changelog"
	echo -e "\tmkdir \$@"
	echo -e "\tcp -r \$(<D) \$@"
	echo -e "\tcd \$@ && uscan --force-download --download-current-version"
	echo -e "\ttar xzvf $i-\$(`echo $i`_UPVER).tar.gz \$(TARARGS) \$@"
	echo
done
