Package: empathy
Architecture: any
Depends: ${shlibs:Depends},
         ${misc:Depends},
         empathy-common (= ${source:Version}),
         telepathy-mission-control-5 (>= 1:5.12.0),
         gsettings-desktop-schemas,
         gnome-icon-theme (>= 2.30.0),
         geoclue,
         telepathy-logger (>= 0.2.13),
