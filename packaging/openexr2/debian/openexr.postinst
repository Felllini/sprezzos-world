#!/bin/sh
# $Id$
# vim:ts=4:sw=4:expandtab:

set -e

if [ "$1" = "configure" ]
then
    # Convert empty directory into a symlink
    if [ ! -L /usr/share/doc/openexr ]
    then
        rm -rf /usr/share/doc/openexr
        ln -s /usr/share/doc/libopenexr6 /usr/share/doc/openexr
    fi
fi

#DEBHELPER#

exit 0
