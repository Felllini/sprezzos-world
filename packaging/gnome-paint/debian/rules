#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

export LDFLAGS += -Wl,--as-needed -lm

# Otherwise the default doc files go to /usr/doc for whatever reason...
override_dh_install:
	mkdir -p debian/gnome-paint/usr/share/doc/gnome-paint/
	mv debian/gnome-paint/usr/doc/gnome-paint/README debian/gnome-paint/usr/share/doc/gnome-paint/
	rm -rf debian/gnome-paint/usr/doc/

%:
	dh $@
